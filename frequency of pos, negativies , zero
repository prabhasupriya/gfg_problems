#include <bits/stdc++.h>
using namespace std;

int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */  
    int a;
    cin>>a;
    int arr[a];
    for(int i=0;i<a;i++){
        cin>>arr[i];
    } 
    int pos =0;
    int neg=0;
    int zero =0;
    for(int i =0;i<a;i++){
        if(arr[i] ==0){
            zero +=1;
        }
        else if(arr[i] > 0){
            pos +=1;
        }
        else{
            neg +=1;
        }
    }
    printf("%d %d %d" , zero , pos,neg);
    return 0;
}
