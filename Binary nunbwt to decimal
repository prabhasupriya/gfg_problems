class Solution {
  public:
    int binary_to_decimal(int n) {
        // code here
        int sum =0;
        string a = to_string(n);
        for(int i=a.size()-1;i>=0;i--){
            if(a[i] == '1'){
                sum = sum + pow(2,a.size()-1-i);
            }
        }
        return sum;
    }
};
