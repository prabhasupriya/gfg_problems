class Solution {
  public:
    // Function to search x in arr
    // arr: input array
    // X: element to be searched for
    int search(int arr[], int n, int x) {
int found =0;
int ans;
        // Your code here
        for(int i=0;i<n;i++){
            if(arr[i]== x){
            found =1;
                ans = i;
                break;
            }
        }
        if(found ==1){
            return ans;
        }
        else{
            return -1;
        }
    }
};
