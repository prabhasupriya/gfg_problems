// User function Template for C++

class Solution {
  public:
    // arr[]: input array
    // n: size of array
    // x: element for which you need to find smaller than x
    int smallerThanX(int arr[], int n, int x) {
        // your code here
        int found =0;
        int count=0;
        for(int i=0;i<n;i++){
            if(arr[i] < x){
                count =count+1;
                found =1;
            }
        }
        if(found == 1){
            return count;
        }
        else{
            return -1;
        }
    }
};
