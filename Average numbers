int posAverage(int arr[], int size) {

    // Write your code to find average of positive numbers in arr array
    // return the answer
    int count =0;
    int sum =0;
    for(int i=0;i<size;i++){
        if(arr[i]>=0){
            sum += arr[i];
            count ++;
        }
    }
    if(count==0){
        return 0;
    }
    int average = sum /count;
    return average;
}
